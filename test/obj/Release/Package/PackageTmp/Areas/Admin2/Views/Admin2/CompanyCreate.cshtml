@model test.Models.CompanyEditModel
@{
    ViewBag.Title = "Create";
}
<div class="modal-header">
    <h4 class="modal-title" id="myModalLabel">新增</h4>
</div>
<div class="modal-body">
    @using (Html.BeginForm("CompanyCreate", "Admin2", new { @area = "Admin2" }, FormMethod.Post, new { @class = "form-horizontal", @id = "company-form", @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Sid, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Sid, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Sid, "", new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Addr, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-8">
                @Html.PasswordFor(m => m.Addr, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Addr, "", new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Phone, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Img, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Img, new { @class = "form-control datepicker", @readonly = "readonly",@type="file" })
                @Html.ValidationMessageFor(m => m.Img, "", new { @class = "label label-danger" })
            </div>
        </div>
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
    <button type="button" class="btn btn-primary">送出</button>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".btn-primary").click(function () {
            $("#company-form").submit();
        });
        $(".btn-default").click(function () {
            $("#itemModal").modal("hide");
            $('#itemModal').one('hidden.bs.modal', function (e) {
                $(this).removeData('bs.modal');
            });
        });
        //$(".datepicker").datepicker({ format: 'yyyy/mm/dd' });
    });

</script>